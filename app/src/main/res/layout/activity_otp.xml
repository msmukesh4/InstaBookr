<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/txt_enter_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        style="@style/HeadingLarge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/vertical_layout_separator_medium"/>

    <EditText
        android:id="@+id/et_otp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:maxLength="6"
        android:hint = "Enter OTP"
        android:layout_marginLeft="@dimen/vertical_layout_separator_xxlarge"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginRight="@dimen/vertical_layout_separator_xxlarge"
        style="@style/EditTextStyle"/>


    <Button
        android:id="@+id/btn_verify_otp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/vertical_layout_separator_large"
        android:paddingLeft="@dimen/vertical_layout_separator_large"
        android:paddingRight="@dimen/vertical_layout_separator_large"
        android:layout_alignParentBottom="true"
        android:text="Verify OTP"
        android:theme="@style/ButtonInfo"/>

    <Button
        android:id="@+id/btn_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:paddingLeft="@dimen/vertical_layout_separator_large"
        android:paddingRight="@dimen/vertical_layout_separator_large"
        android:text="Resend"
        android:theme="@style/ButtonSuccess"
        android:layout_alignTop="@+id/btn_verify_otp"
        android:layout_toLeftOf="@+id/btn_verify_otp"
        android:layout_toStartOf="@+id/btn_verify_otp" />

</RelativeLayout>