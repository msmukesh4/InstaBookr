<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

   <ScrollView
       android:id="@+id/scrollview"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:id="@+id/rl_with_view">
               <ImageView
                   android:id="@+id/iv_service_banner"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="fitXY"
                   android:adjustViewBounds="true"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentLeft="true"
                   android:src="@drawable/new1"
                   />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@drawable/transperent_view"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:orientation="horizontal"
                       android:layout_weight=".8">
                       <ImageView
                           android:id="@+id/iv_back"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight=".2"
                           android:src="@mipmap/ic_menu_back"
                           android:padding="5dp"
                           />
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"></LinearLayout>

                       <ImageView
                           android:id="@+id/iv_contact"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight=".2"
                           android:src="@mipmap/stat_sys_phone_call"
                           android:padding="10dp"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:orientation="horizontal"
                       android:layout_weight="1">
                       <TextView
                           android:id="@+id/tv_shop_name"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           style="@style/BannerText"
                           android:text="Shop Name"
                           android:gravity="center"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:orientation="horizontal"
                       android:layout_weight="1">

                       <TextView
                           android:id="@+id/tv_shop_address"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           style="@style/BannerSmallText"
                           android:text="Shop address"
                           android:gravity="center"/>


                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:orientation="horizontal"
                       android:layout_weight=".8">
                       <ImageView
                           android:id="@+id/iv_info"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight=".3"
                           android:src="@mipmap/stat_sys_certificate_info"
                           android:padding="7dp"
                           />
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight=".5"></LinearLayout>
                       <LinearLayout
                           android:id="@+id/ll_get_directions"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1">
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:src="@mipmap/ic_menu_directions"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:paddingLeft="10dp"
                               style="@style/BannerSmallText"
                               android:textStyle="bold"
                               android:text="GET DIRECTIONS"
                               android:layout_gravity="center"/>

                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/rl_with_view">

               <RelativeLayout
                   android:id="@+id/selected_service_summary"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="10dp">
                   <TextView
                       android:id="@+id/tv_service_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style="@style/StandardPrompt"
                       android:padding="10dp"
                       android:text="Service Name"
                       android:layout_centerHorizontal="true"
                       />
                   <TextView
                       android:id="@+id/tv_booking_date"
                       android:layout_below="@+id/tv_service_name"
                       android:padding="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style="@style/StandardPrompt"
                       android:text="Booking date Time"
                       android:layout_centerHorizontal="true"
                       />
                   <LinearLayout
                       android:id="@+id/time_and_changes"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="10dp"
                       android:orientation="horizontal"
                       android:layout_below="@+id/tv_booking_date">

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1">
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:padding="10dp">
                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:text="Subscribe for :"
                                       style="@style/StandardPrompt"
                                       android:textSize="16dp"
                                       android:gravity="center"
                                       />
                               </LinearLayout>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:orientation="horizontal">
                                   <Spinner
                                       android:id="@+id/spinner_period_time_selector"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"
                                       android:layout_weight=".5">
                                   </Spinner>

                                   <Spinner
                                       android:id="@+id/spinner_period_selector"
                                       android:layout_width="0dp"
                                       android:layout_height="wrap_content"

                                       android:layout_weight=".8">
                                   </Spinner>


                               </LinearLayout>
                           </LinearLayout>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1">
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:padding="10dp">
                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:text="Changes"
                                       style="@style/StandardPrompt"
                                       android:textSize="16dp"
                                       android:gravity="center"
                                       />
                               </LinearLayout>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:orientation="horizontal"
                                   android:padding="10dp">
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       style="@style/SmallPrompt"
                                       android:text="₹"
                                       android:paddingLeft="@dimen/activity_horizontal_margin"/>
                                   <TextView
                                       android:id="@+id/tv_service_actual_cost"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       style="@style/SmallPrompt"
                                       android:paddingLeft="2dp"
                                       android:text="500"
                                       />
                                   <TextView
                                       android:id="@+id/tv_discounted_cost"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       style="@style/SmallPrompt"
                                       android:paddingLeft="10dp"
                                       android:paddingRight="10dp"
                                       android:text="300"
                                       android:layout_toRightOf="@+id/tv_service_actual_cost"
                                       />
                               </LinearLayout>
                           </LinearLayout>
                       </LinearLayout>
                   </LinearLayout>
                   <TextView
                       android:id="@+id/tv_time_slot_text"
                       android:layout_below="@+id/time_and_changes"
                       android:paddingLeft="@dimen/activity_horizontal_margin"
                       android:paddingRight="@dimen/activity_horizontal_margin"
                       android:layout_marginTop="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style="@style/StandardPrompt"
                       android:text=" Time Slot "
                       />
                   <Spinner
                       android:id="@+id/spinner_time_slot"
                       android:layout_marginTop="10dp"
                       android:layout_marginBottom="50dp"
                       android:layout_below="@+id/tv_time_slot_text"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                   </Spinner>
               </RelativeLayout>

           </RelativeLayout>

       </RelativeLayout>
   </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/activity_vertical_margin">

        <!-- on clicking this service should be added to cart -->
        <Button
            android:id="@+id/btn_add_to_cart"
            android:theme="@style/ButtonSuccess"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="ADD TO CART"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>